# Authorization: Bearer {{Token}}

# GET {{CSSistemas.API_HostAddress}}/api/business/{id}
# Authorization: Bearer {{Token}}

# POST {{CSSistemas.API_HostAddress}}/api/business
# Authorization: Bearer {{Token}}
# Content-Type: application/json
# { "name": "Clínica Odonto", "businessType": 0, "publicSlug": "clinica-odonto" }

# PUT {{CSSistemas.API_HostAddress}}/api/business/{id}
